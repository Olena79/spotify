<main class='main'>
  {{#with data}}
    <div class='main__content'>

      <div class='header'>
        <h1 class='title'>Моя бібліотека</h1>
        <a
          href='/'
          class='add-button'
          data-text='Назад до списку плейлистів'
        >
          <img src='/svg/fast-back.svg' />
        </a>
      </div>

      <form
        method='POST'
        action='/spotify-search'
        class='form'
      >
        <img src='/svg/search.svg' />
        <input
          type='search'
          class='search'
          placeholder='Введіть запит'
          name='value'
          value='{{value}}'
        />
        <button class='search__button'>Пошук</button>
      </form>

      <ul class='playlist__list'>
        {{#each list}}
          <li class='playlist'>
            <div class='playlist__content'><img
                src='https://pictum.photos/100/100'
                height='100px'
              /></div>

            <div class='playlist__content'>
              <strong class='playlist__name'>
                {{name}}
              </strong>
              <span class='playlist__amount'>
                Кількість пісень:
                {{amount}}
              </span>
            </div>

          </li>
        {{/each}}
      </ul>

    </div>
  {{/with}}
</main>